<?xml version="1.0"?>
<dialog title="Select a Colour">
	<vbox>
		<hbox bind="left top right bottom" spacing="10">
			<filler id="square" bind="left top right bottom" width="256" height="256" />
			<filler id="slider" bind="top right bottom" width="12" height="256" />
			<vbox id="l" bind="top right bottom">
				<hbox bind="left right" spacing="0">
					<filler id="sample-before" bind="left right" height="25"/>
					<filler id="sample-after" bind="left right" height="25"/>
				</hbox>
				<filler bind="top bottom" />
				<vbox spacing="1" bind="bottom">
					<hbox>
						<radiobutton margin-top="3" id="hue" width="22" title="h:"/>
						<edittext style="right number" width="22" id="hue-text"/>
					</hbox>
					<hbox>
						<radiobutton margin-top="3" id="saturation" width="22" title="s:"/>
						<edittext style="right number" width="22" id="saturation-text"/>
					</hbox>
					<hbox>
						<radiobutton margin-top="3" id="value" width="22" title="v:"/>
						<edittext style="right number" width="22" id="value-text"/>
					</hbox>
					<hbox>
						<radiobutton margin-top="3" id="red" width="22" title="r:"/>
						<edittext style="right number" width="22" id="red-text"/>
					</hbox>
					<hbox>
						<radiobutton margin-top="3" id="green" width="22" title="g:"/>
						<edittext style="right number" width="22" id="green-text"/>
					</hbox>
					<hbox>
						<radiobutton margin-top="3" id="blue" width="22" title="b:"/>
						<edittext style="right number" width="22" id="blue-text"/>
					</hbox>
				</vbox>
				<hbox bind="left right">
					<caption margin-top="3" text="#" />
					<edittext width="30" bind="left right bottom" id="hex"/>
				</hbox>
			</vbox>
		</hbox>
	</vbox>
	<hbox margin-top="7" bind="left right bottom">
		<vbox bind="left right" /> <!-- expandable filler -->
		<button bind="right bottom" title="OK" id="ok" default="true" />
		<button bind="right bottom" title="Cancel" id="cancel" />
	</hbox>
</dialog>
