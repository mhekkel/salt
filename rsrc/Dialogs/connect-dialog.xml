<?xml version="1.0"?>
<dialog title="Connect">
	<vbox bind="left right" spacing="4">
		<hbox bind="left right">
			<caption margin-top="3" width="30" id="label-1" text="Server:"/>
			<combobox width="80" bind="left right" id="host"/>
		</hbox>
		<hbox bind="left right" spacing="4">
			<caption margin-top="3" width="30" id="label-2" text="Username:"/>
			<edittext width="80" bind="left right" id="user"/>
		</hbox>
		<expander id="more-expander" title="More Options">
			<vbox id="more-box">
				<hbox margin-top="10" bind="left right">
					<caption margin-top="3" width="60" text="Add Private Key:"/>
					<button title="Browseâ€¦" id="priv-key"/>
				</hbox>

				<hbox margin-top="10" bind="left right" spacing="4">
					<caption margin-top="3" width="60" id="label-2" text="SSH Command:"/>
					<edittext width="100" bind="left right" id="ssh-command"/>
				</hbox>
				
				<checkbox margin-top="10" id='use-proxy' title="Use proxy" />
	
				<hbox bind="left right">
					<caption margin-top="3" width="60" id="label-2" text="Proxy Server:"/>
					<combobox width="100" bind="left right" id="proxy-host"/>
				</hbox>
				<hbox bind="left right">
					<caption margin-top="3" width="60" id="label-2" text="Proxy Username:"/>
					<edittext width="100" bind="left right" id="proxy-user"/>
				</hbox>
				<hbox bind="left right">
					<caption margin-top="3" width="60" id="label-2" text="Proxy Command:"/>
					<edittext width="100" bind="left right" id="proxy-command"/>
				</hbox>
			</vbox>
		</expander>

<!--		<expander margin-top="2" margin-bottom="0" id="more-expander" title="More Options" />-->
	</vbox>
	<hbox bind="left right bottom" margin-top="7" fill="true">
		<vbox bind="left right" expand="true" fill="true" /> <!-- expandable filler -->
		<button bind="right bottom" title="Cancel" id="cancel" packing="end" />
		<button bind="right bottom" title="OK" id="ok" default="true" packing="end" />
	</hbox>
</dialog>
